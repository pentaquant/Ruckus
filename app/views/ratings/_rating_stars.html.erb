<div class="stars">
  <form action="">
    <input type="hidden" name="rateable[type]" value="<%= rateable[:type] %>"/>
    <input type="hidden" name="rateable[id]" value="<%= rateable[:id] %>"/>
    <button type="submit" class="star-button">Submit</button>
    <input class="star star-5" id="star-5" type="radio" name="rateable[score]" value="5" />
    <label class="star star-5" for="star-5"></label>
    <input class="star star-4" id="star-4" type="radio" name="rateable[score]" value="4" />
    <label class="star star-4" for="star-4"></label>
    <input class="star star-3" id="star-3" type="radio" name="rateable[score]" value="3" />
    <label class="star star-3" for="star-3"></label>
    <input class="star star-2" id="star-2" type="radio" name="rateable[score]" value="2" />
    <label class="star star-2" for="star-2"></label>
    <input class="star star-1" id="star-1" type="radio" name="rateable[score]" value="1" />
    <label class="star star-1" for="star-1"></label>
  </form>
</div>
